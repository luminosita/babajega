<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liftOnScroll="false">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/material_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_back_24dp"
                app:title="@string/pin_setup" />
        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:text="@string/enter_pin"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pin1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_pin_entry"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/pin2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_pin_entry"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/pin3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_pin_entry"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/pin4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_pin_entry"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvResetPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:text="@string/set_reset_pin"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/resetpin1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_pin_entry"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/resetpin2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_pin_entry"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/resetpin3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_pin_entry"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

            <EditText
                android:id="@+id/resetpin4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/bg_pin_entry"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/apply"
                android:textColor="#ffFFA000" />

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/cancel"
                android:textColor="#ffFFA000" />


        </LinearLayout>
    </LinearLayout>

</layout>